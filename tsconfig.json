{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "esnext",
            "DOM",
            "DOM.Iterable"
        ],
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "noEmit": true,
        /* To shim types of client side code (https://vitejs.dev/guide/features.html#client-types) */
        "types": [
            "vite/client",
            "vitest/globals"
        ],
        "paths": {
            "@gqlgen": [
                "./src/_gqlgen"
            ],
            "@gqlgen/*": [
                "./src/_gqlgen/*"
            ],
            "@shared/*": [
                "./src/shared/*"
            ],
            "@widgets/*": [
                "./src/widgets/*"
            ]
        },
        "baseUrl": ".",
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "verbatimModuleSyntax": true,
        "noFallthroughCasesInSwitch": true
    },
    "exclude": [
        "node_modules"
    ]
}
